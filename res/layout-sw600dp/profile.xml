<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background" >
    
    <ImageView
        android:id="@+id/account_title_background"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/desc_account_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/acc_bg" />

    <TextView
        android:id="@+id/profile_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/profile_lastname"
        android:layout_marginLeft="18dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/appointments_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/profile_lastname"
        android:layout_marginRight="33dp"
        android:paddingRight="18dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/appointments_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/appointments_number"
        android:paddingRight="18dp"
        android:text="@string/appointments" 
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:typeface="serif" />

    <TextView
        android:id="@+id/profile_lastname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profile_firstname"
        android:layout_alignParentTop="true"
        android:layout_marginTop="21dp" 
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:typeface="serif" />
    
    <RelativeLayout
        android:layout_below="@+id/account_title_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="50dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/imageView2"
            android:layout_alignTop="@+id/linearLayout1"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@drawable/list_main_bg" />
	    
	    <ListView
	        android:id="@android:id/list"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_above="@+id/imageView2"
	        android:layout_alignLeft="@+id/imageView2"
	       >

    </ListView>

	    <ImageView
	        android:id="@+id/imageView2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentBottom="true"
	        android:layout_alignRight="@+id/imageView3"
	        
	        android:layout_marginBottom="63dp"
	        android:adjustViewBounds="true"
	        android:scaleType="fitXY"
	        android:src="@drawable/list_bot_bg" />

</RelativeLayout>

</RelativeLayout>
